@model Model.ViewModel.CatalogoDTO

@{
    ViewBag.Title = "Catálogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Subir Catálogo</h4>

@using (Html.BeginForm("Catalogo", "Anuncios", FormMethod.Post, new { area = "Anuncios", enctype = "multipart/form-data" }))
{

    <div class="info-container">
        <h4>Por favor suba las imágenes del</h4>
        <div class="form-horizontal">
            <h4>Catálogo de anuncio</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-6 hidden">
                <div class="col-md-12">
                    <input class="form-control col-md-12 text-box single-line" name="anuncioId" id="anuncioId" type="text" value="@ViewBag.AnuncioId">                    
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <span>Foto:</span>
                    @*@Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <input type="file" id="imagen" name="imagen" multiple runat="server" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" onclick="ActivarLoader()" />
                </div>
            </div>

        </div>
    </div>

}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
