@model IEnumerable<Model.ViewModel.AnuncioDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container" style="margin-top:5%">
    <h4>@ViewBag.Titulo</h4>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Anuncios", new { area = "Administrador" })'">
        Crear nuevo anuncio
    </button>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1 color-blue"></i>Anuncios activos</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.celularContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fechaActivacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fechaCancelacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.categoria)
                            </th>
                            <th>Acciones</th>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.celularContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fechaActivacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fechaCancelacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.categoria)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>


                    @foreach (var item in Model)
                    {
                        <tr id="@Html.DisplayFor(modelItem => item.id)" >
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.titulo)
                            </td>
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.nombreContacto)
                            </td >
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.telefono)
                            </td>
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.celularContacto)
                            </td>
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.fechaActivacion)
                            </td>
                            <td data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.fechaCancelacion)
                            </td>
                            <th data-toggle="modal" onclick="ajaxControl(@item.id)" data-target="#mdlCtrl">
                                @Html.DisplayFor(modelItem => item.categoria.nombre)
                            </th>
                            <td>
                                <button class="btn btn-primary">
                                    Editar
                                </button>
                                <button class="btn btn-danger">
                                    Borrar
                                </button>
                            </td>

                        </tr>
                    }

                </table>



            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="mdlCtrl" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog   modal-lg" role="document">
        <div class="modal-content">
            <div class="box box-warning" style="padding:14px">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div id="dvcontent">
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
   
    function ajaxControl(indx) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Details", "Anuncios")',
            datatype: "json",
            contentType: 'application/json',
            data: JSON.stringify({ "id": indx }),
            success: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            },
            error: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            }
        });
    }
    function ajaxControlEdit(indx) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Details", "Anuncios")',
            datatype: "json",
            contentType: 'application/json',
            data: JSON.stringify({ "id": indx }),
            success: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            },
            error: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            }
        });
    }
      function ajaxControlDelete(indx) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Details", "Anuncios")',
            datatype: "json",
            contentType: 'application/json',
            data: JSON.stringify({ "id": indx }),
            success: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            },
            error: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            }
        });
    }

</script>
