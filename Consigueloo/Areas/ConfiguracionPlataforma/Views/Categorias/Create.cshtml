
@model Model.ViewModel.CategoriasDTO

    <div class="container-fluid">
        @using (Html.BeginForm("CreateNew", "Categorias", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4>Ingrese la nueva categoría</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-info" })

                <div class="col-sm-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            <p data-toggle="tooltip" title="Registre el nombre de la categoría" class="fas fa-info-circle" style="color:#949599;"></p>
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-info" })
                        </div>
                    </div>
                    <div class="form-group">
                        Foto:
                        @*@Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            <input type="file" id="imagen" name="imagen" runat="server" />
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" onclick="ActivarLoader()" />
                        </div>
                    </div>

                </div>

            </div>
        }

    </div>


<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>