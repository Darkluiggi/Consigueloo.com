@model Model.ViewModel.CategoriasDTO

<h4>Detalle de información de la categoría</h4>
<hr />
<div class="row" style="padding:15px">
    <div class="col-md-3">
        <dl class="dl-horizontal">
            <dt style="margin-bottom:20px">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>
        </dl>
    </div>
    <dl class="dl-horizontal">
        <dt>

            @using (Ajax.BeginForm("Edit", "Categorias", new { id = Model.id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dvcontent", OnBegin = "ActivarLoader()", OnComplete = "DesactivarLoader()" }))
            {
                <input type="submit" value="Editar" class="btn btn-primary" id="btnEditar" width="200" />
            }
            <br />
        </dt>
        <dd>

            @using (Ajax.BeginForm("DeleteItem", "Categorias", new { id = Model.id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dvcontent", OnBegin = "ActivarLoader()", OnComplete = "DesactivarLoader()" }))
            {
                <input type="submit" value="Borrar" class="btn btn-primary" id="btnInactivar" width="200" />
            }
        </dd>

    </dl>
    <br />
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
