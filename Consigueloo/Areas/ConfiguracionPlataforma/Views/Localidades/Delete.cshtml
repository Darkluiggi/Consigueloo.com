@model Model.ViewModel.LocalidadesDTO

<h3 class="col-md-12">Esta seguro de borrar esta información?</h3>

<div class="row" style="padding:15px; margin-left:20px;">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt style="margin-bottom:20px">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>


        </dl>
</div>

        <div class="form-actions no-color">
            <input type="button" value="Borrar" class="btn btn-danger" onclick="DeleteConfirmed(@Model.id)" />

        </div>

    </div>

    <script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    function DeleteConfirmed(indx) {
            ActivarLoader()
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteConfirmed", "Localidades")',
            datatype: "json",
            contentType: 'application/json',
            data: JSON.stringify({ "id": indx }),
            success: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            },
            error: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            }
        });
    }
    </script>
