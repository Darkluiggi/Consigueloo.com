@model Model.ViewModel.PeriodosDTO

<h4>Editar la información</h4>

@using (Ajax.BeginForm("EditItem", "Periodos", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dvcontent", OnBegin = "ActivarLoader()", OnComplete = "DesactivarLoader()" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Periodo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-info" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            <p data-toggle="tooltip" title="Periodo registrado" class="fas fa-info-circle" style="color:#949599;"></p> @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-info" })
        </div>
    </div>


    <div class="form-group col-md-6">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>