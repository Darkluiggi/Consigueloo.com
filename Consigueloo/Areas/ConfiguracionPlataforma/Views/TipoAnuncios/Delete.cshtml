@model Model.ViewModel.TipoAnunciosDTO

<h3>Esta seguro de borrar esta información?</h3>
<hr />
<div class="row" style="padding:15px; margin-left:20px;">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt >
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd style="margin-bottom:20px">
                @Html.DisplayFor(model => model.nombre.nombre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.duracion)
            </dt>

            <dd style="margin-bottom:20px">
                @Html.DisplayFor(model => model.duracion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.precio)
            </dt>

            <dd style="margin-bottom:20px">
                @Html.DisplayFor(model => model.precio)
            </dd>
        </dl>

</div>
        <div class="form-actions no-color">
            <input type="button" value="Borrar" class="btn btn-danger" onclick="DeleteConfirmed(@Model.id)" />

        </div>

    </div>

    <script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    function DeleteConfirmed(indx) {
            ActivarLoader()
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteConfirmed", "TipoAnuncios")',
            datatype: "json",
            contentType: 'application/json',
            data: JSON.stringify({ "id": indx }),
            success: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            },
            error: function (r) {
                $("#dvcontent").html(r);
                DesactivarLoader();
            }
        });
    }
    </script>
