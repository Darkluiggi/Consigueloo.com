@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Usuarios", FormMethod.Post, new { area="", id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user fa-fw color-blue"></i>
        </a>
        @*<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">*@
        @*<i class="fas fa-user-circle fa-fw"></i>*@
        @*</a>*@
    <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
        <a class="dropdown-item d-flex align-items-center" href="#">@User.Identity.GetUserName()</a>
        <a class="dropdown-item d-flex align-items-center" href="~/Manage">Settings</a>

        @if (!string.IsNullOrEmpty(ViewBag.PerfilValidator))
        {
            if (ViewBag.PerfilValidator.Equals("Administrador"))
            {
                <a class="dropdown-item d-flex align-items-center" href="~/Administrador/Administrador">Panel de administrador</a>

            }
        }


        <a class="dropdown-item d-flex align-items-center" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a>
    </div>
    </li>


     
    }
}
else
{
<ul class="nav navbar-nav navbar-left">
    <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle " href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user fa-fw color-blue"></i>
        </a>
        <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">

            <a class="dropdown-item d-flex align-items-center" href="~/Account/Register">Registrarse</a>
            <a class="dropdown-item d-flex align-items-center" href="~/Account/Login">Iniciar sesión</a>
            
        </div>

    </li>
</ul>

           
        }
